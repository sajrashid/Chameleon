@page "/sideBar"
@namespace Chameleon.Pages
@inject IJSRuntime JsRuntime;

<div id="sideBar" class="@(( Left ? "" : "active" ) + " sidebar")">
    <div class="toggle-btn" @onclick="ChangeSideBarCssClass">
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="list">
        <div class="item">Home</div>
        <div class="item">About us</div>
        <div class="item">Gallery</div>
        <div class="item">Contact us</div>
        <div class="item group ">
            <a href="Settings" class="hover:bg-blue-600">
                <span class="group-hover:text-black d-inline-block  p-1 m-0">
                    Theme
                </span>
                <span class="group-hover:text-emerald align-middle inline-block p-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="group-hover:fill-red hover:fill-red  h-6 w-6 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    </svg>
                </span>
            </a>
        </div>
        <div>
            <ThemeSelector />
        </div>
    </div>
</div>
<div class="overlay @( IsOverLay ? "overlayOff" : "overlayOn" )" @onclick="ChangeOverLayCssClass">
    on
</div>


@code {

    private static Action action;
    private static bool Left { get; set; } = true;
    private static bool IsOverLay { get; set; } = true;

    protected override void OnInitialized()
    {
        action = UpdateCss;
    }

    private void UpdateCss()
    {
        Left = !Left;
        IsOverLay = !IsOverLay;
        StateHasChanged();
    }


    [JSInvokable]
    public static void ChangeSideBarCssClass()
    {
        action.Invoke();

    }



    public void ChangeOverLayCssClass(MouseEventArgs e)
    {
        Left = !Left;
        IsOverLay = !IsOverLay;
    }
}