@page "/"
<div ondragover="event.preventDefault();">
   @if (ListComp != null){
       {
            var c=0;
            var b = 0;
            <div class="w-full">
             <div class="lg:w-2/4 w-full pl-4 pr-2 pt-4 float-left">
               @foreach (var item in ListComp)
                {
               
                     
                    @if (c < 3)
                    {
                    
                       
                             <div id="@item.Id"  @key="@item.Id"  draggable="true" class="@dropClass @item.DropEnterCss shadow-md bg-base-200 mb-4"
                                  @ontouchleave="@(()=> DragLeave(item))"  @ondragleave="@(()=> DragLeave(item))"
                                  
                                  @ontouchenter="@(()=> DragEnter(item))"  @ondragenter="@(()=> DragEnter(item))"
                                  
                                  @ontouchstart="@(()=> StartDrag(item))" @ondrag="@(()=> StartDrag(item))"
                                  
                                  @ontouchend="@(()=> Drop(item))"    @ondrop="@(()=> Drop(item))" >
                                 <DynamicComponent Type="@item.MyComp" />
                            </div>
                            
                    }
                        c++; 
              }
              </div>
            
             <div class="lg:w-2/4 w-full pl-4 pr-2 pt-4 float-left">
                @foreach (var item in ListComp)
                {
                     
                    @if (b >2)
                    {
                    
           
                             
                                  <div id="@item.Id"  @key="@item.Id"  draggable="true" class="@dropClass @item.DropEnterCss shadow-md bg-base-200 mb-4"
                                        @ondragleave="@(()=> DragLeave(item))"  @ondragenter="@(()=> DragEnter(item))" @ondrop="@(()=> Drop(item))" @ondrag="@(()=> StartDrag(item))">
                                        <DynamicComponent Type="@item.MyComp" />
         
                                   </div>
                           
                              
                    }
                     b++;
               }
               </div>
        </div>
               }
   }
 </div>

  