<div class="pt-6 h-full">
    <EditForm Model="@UserCreds" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <div class="p-10 card bg-base-200 m-6 mx-auto w-4/5 md:w-3/5 lg:w-2/5 ">
            <div class="p-4 mx-auto mb-6"><h1 class="text-3xl">@Options.Title</h1></div>
            <div class="login form-control form-group mt-4 w-full">
                <span class="leftspan bg-base-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                </span>

                <CustomInputText @bind-Value="UserCreds.Email"
                                 SetFocus="true" maxlength="36" placeholder="Email address" autocomplete="username"
                                 class="tracking-widest input input-bordered form-control" id="name" />

                <div class="w-full h-18">
                    <div class="p-2 pt-4 -mb-2.5 text-sm h-16 min-h-full">
                        <ValidationMessage For="@(()=> UserCreds.Email)" />
                    </div>
                </div>
            </div>
            <div class="login form-control form-group w-full">
                <span class="leftspan bg-base-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd" />
                    </svg>
                </span>

                <CustomInputText @bind-Value="UserCreds.Password" type="@TxtType"
                                 maxlength="36" placeholder="Password" autocomplete="current-password"
                                 class="tracking-widest input input-bordered form-control" id="password" />
                <div class="w-full h-18">
                    <div class="p-2 pt-4 -mb-2.5 text-sm h-16 min-h-full">
                        <ValidationMessage For="@(()=> UserCreds.Password)" />
                    </div>
                </div>
                <span class="rightspan" @onclick="ShowPassword">
                    @if (IsPasswordEyeOpen)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" class="animate-pulse h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" />
                            <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />
                        </svg>
                    }
                    else
                    {
                <svg xmlns="http://www.w3.org/2000/svg" class="animate-pulse h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>
                    }
                </span>
            </div>
            <div class="w-full h-18">
                <div class="h-12 min-h-full p-4">
                    @ApiResponseMessage
                </div>
            </div>
            <div class="p-2 w-full items-center">
                <div class="grid md:grid-cols-2  sm:grid:cols-1">
                    <div class="h-full mb-4">
                        <button disabled="@(!context.Validate())" class="btn btn-success" type="submit">Submit</button>
                    </div>
                    <div>
                        <div class="whitespace-nowrap w-full float-right sm:float-left">
                            <span>
                                @Options.Link1Title
                                <a class="inline-block align-baseline text-sm link link-accent" href=@Options.Link1Href>
                                    @Options.Link1Text
                                </a>
                            </span>
                        
                        </div>
                        <div class="whitespace-nowrap w-full float-right sm:float-left">
                            <span>
                                @Options.Link2Title
                                <a class="pr-3 inline-block align-baseline text-sm link link-secondary" href=@Options.Link2Href>
                                    @Options.Link2Text
                                </a>
                            </span>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </EditForm>
    <p>@IsCredsValid</p>
</div>

