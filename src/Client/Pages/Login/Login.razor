@page "/login"

<div class="pt-6 h-full">
    <EditForm Model="@UserCreds" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <div class="p-10 card bg-base-200 m-6 mx-auto w-4/5 md:w-3/5 lg:w-2/5 ">
            <div class="p-4 mx-auto"><h1 class="text-3xl">Login</h1></div>
            <div class="login form-control form-group mb-4 mt-4 w-full p-4">
                <span class="leftspan bg-base-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
                    </svg>
                </span>
                <InputText  @ref="userNameReference" maxlength="24" placeholder="username" class="tracking-widest input input-bordered form-control" id="name" @bind-Value="UserCreds.Username" />
            </div>
            <div class="login form-control form-group w-full p-4">
                <span class="leftspan bg-base-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd" />
                    </svg>
                </span>
                 <InputText type="@TxtType" maxlength="24" placeholder="password" class="tracking-widest align-baseline input input-bordered form-control" id="password" @bind-Value="UserCreds.Password" />
                 <span class="rightspan" @onclick="ShowPassword">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                         <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" />
                         <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />
                     </svg>
                 </span>
            
            </div>
            <div class="w-full h-28">
                <div class="h-24 min-h-full p-4">
                    <ValidationSummary />
                </div>
            </div>
            <div class="p-4 flex items-center justify-between">
                <button disabled="@(!context.Validate())" class="btn btn-success" type="submit">Submit</button>
                <div class="float-left">
                    <div class="w-full whitespace-nowrap">
                        Don't have an account
                        <a class="pr-3 inline-block align-baseline text-sm link link-accent link-hover" href="signUp">
                            Create
                        </a>
                    </div>
                    <div class="w-full whitespace-nowrap">
                        Forgot password?
                        <a class="pr-3 inline-block align-baseline text-sm link link-secondary" href="signUp">
                            Click Here
                        </a>
                    </div>
                </div>
            </div>
        
        </div>
    </EditForm>
    <p>@isCredsValid</p>
</div>

































