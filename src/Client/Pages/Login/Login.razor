@page "/login"

<div class="pt-6 h-full">
    <EditForm Model="@UserCreds" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <div class="p-10 card bg-base-200 m-6 mx-auto w-4/5 md:w-3/5 lg:w-2/5 ">
      
            <div class="form-control form-group mb-4 mt-4 w-full p-4">
                <span class="align-baseline inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
                    </svg>
                </span>
                <InputText  @ref="userNameReference" placeholder="username" class="input input-bordered form-control" id="name" @bind-Value="UserCreds.Username" />
            </div>
            <div class="form-control form-group w-full p-4">
                <span class="inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd" />
                    </svg>
                </span>
                 <InputText type="password" placeholder="password" class="align-baseline input input-bordered form-control" id="password" @bind-Value="UserCreds.Password" />
            </div>
            <div class="w-full h-28">
                <div class="h-24 min-h-full p-4">
                    <ValidationSummary />
                </div>
            </div>
            <div class="p-4 flex items-center justify-between">
                <button  disabled="@(!context.Validate())" class="btn btn-success"  type="submit">Submit</button>
                <a class="pr-3 inline-block align-baseline text-sm link link-secondary link-hover" href="createAccount">
                    Create Account
                </a>
            </div>
        </div>
    </EditForm>
    <p>@isCredsValid</p>
</div>

































